<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SivarMotors_Layout.SignUp"
             Title="Registrarse">
    <StackLayout Margin="20,20,20,20" Spacing="10">
        <Entry x:Name="Nombre" Placeholder="Ingrese su nombre de usuario"/>
        <Entry x:Name="Email" Placeholder="Ingrese su E-mail" Keyboard="Email"/>
        <Entry x:Name="Password1" Placeholder="Ingrese su contraseña" IsPassword="True"/>
        <Entry x:Name="Password2" Placeholder="Confirme su conraseña" IsPassword="True"/>
        <Button x:Name="BtnSignUp" Text="Crear Usuario" Clicked="BtnSignUp_Clicked" HorizontalOptions="End"/>
    </StackLayout>
</ContentPage>